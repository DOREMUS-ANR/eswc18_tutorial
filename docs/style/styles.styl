@import 'https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=en'
@import "button"
@import "footer"

defaultFont = 'Roboto','Helvetica','Arial',sans-serif
monospaceFont = "Lucida Console", Monaco, monospace

// COLORS
materialLink = #673AB7
mainColor = #EF6C00

html, body
  background-color: #FAFAFA;
  margin 0

body
  font-family defaultFont

h1,h2
  font-family defaultFont
  text-transform capitalize

ul
  list-style none
  padding 0

a
  color materialLink
  text-decoration none
  &:hover
    text-decoration underline

.mainContent
  max-width 900px
  margin auto

section
h1
  max-width 900px
  margin auto

.cover
  max-width none

  display block
  padding 4em 0 0

  background  #F68D33 url('img/guitar.jpg') center center no-repeat
  background-size cover

  box-shadow inset 0 -7px 16px -12px grayDark
  margin-bottom 2em

  .inside
    padding 0 2em
    display flex
    align-items center
    justify-content space-between

    max-width 900px
    margin auto
    color #fff

    +below('m')
      flex-direction column
  a
    color #fff
    display inline-block
    background alpha(materialLink, .8)
    border-radius 3px
    padding .2em
    text-decoration none
    transition background 300ms ease-in-out
    &:hover
      background materialLink

  nav.mainNav
    background alpha(mainColor, .6)
    ul
      max-width 900px
      margin auto
      padding .5em 1em
      li
        list-style none
        display inline-block
        a
          text-transform uppercase
          padding .4em
          background none
          &.active
            background alpha(materialLink, .8)
          &:hover
            border-color materialLink



  h1
    font-size 3em
    font-weight 300
    color #fff

  h2
    font-weight 300
    color #fff
    opacity .9

  +below('m')
    text-align center

  .logo
    width 15em
    height 15em
    padding-left 2em
    +below('m')
      max-width 8em
      max-height 8em
      width 70vw
      height 70vw
      margin-top 2em
    img
      max-width: 100%
      max-height: 100%


.card
  background #fff
  box-shadow 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23)
  margin-bottom 4em

  ul.list
    padding 1em 0
    > li
      margin 1em 2em
      padding 1em
      border-bottom 1px solid #999
      &:last-child
        border-bottom none
        margin-bottom 0
      &:first-child
        margin-top 0

      .label
        display inline-block
        width 8em
        padding 0 1em 0 2em
      .content
        display inline-block
        width calc(100% - 11em)

      .description
        font-style italic
        font-size 1.1em
        margin-bottom .4em

  h2
    text-transform: uppercase
    font-size 1.1em
    margin 0
    margin-bottom .4em

    a
      text-decoration none
      color inherit;
    span
      font-variant: small-caps
    small
      display block
      font-size: .5em
      opacity: .6
      font-family monospaceFont

  ul.features
    display table
    li
      display table-row
      margin .5em
      font-size .9em
      div
        display table-cell
        padding .5em
        vertical-align: text-top;
      .prop
        font-variant: small-caps
        opacity .8

      small
        opacity .5
        font-size .8em

.profile-pic
  float left
  margin 0 1em 1em 0
  border-radius 50%
  border 1px solid #a7a7a7

.textblock
  +above('m')
    margin-left 110px
  +below('s')
    clear both

.mainContent
  section
    margin 4em 0

h3 + h4
  margin-top -1em
  font-weight 100
  margin-bottom 0
  + p
    margin 0
