//main: styles.styl
grayLight = #ededed
grayMedium = #8a8a8a
grayDark = #222

footerHeight = 15rem

#appFooter
  margin-top: 2em
  width: 100%
  left 0
  bottom 0
  box-sizing: border-box
  box-shadow inset 0 9px 16px -12px grayDark
  padding 4em 3em
  background darken(grayLight, 10)
  .descr
    a
      margin-left .5em
    strong
      margin 0 .5em
  .footerCont
    margin auto
    max-width pageWidthLimit
    +above('m')
      display flex
      flex-flow space-between
    div
      flex 1 1
    .projLogoCont
      +below('m')
        width 7em
        max-width 100%
        margin 1em auto
      +above('m')
        border-left 1px solid grayMedium
        padding-left 1.3em
        margin-left 1.3em
        flex 0 1 9em
      a
        opacity .4
        display block
        text-decoration none
        width 100%
        height 100%
        transition opacity .3s materialBezier
        img
          max-width 100%
          max-height 100%
          filter saturate(0%)
          -webkit-filter saturate(0%)
          transition all .3s materialBezier

        &:hover
          opacity 1
          filter none
          img
            filter saturate(100%)
            -webkit-filter saturate(100%)
